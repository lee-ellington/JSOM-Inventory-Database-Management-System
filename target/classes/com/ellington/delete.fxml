<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<GridPane  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ellington.DeleteController" 
   alignment="center" hgap="25" vgap="25" style="-fx-background-color: #154734;">
   <children>
        <Label text="Asset Number" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0"
            style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 22; -fx-wrap-text:true; -fx-text-alignment: center; -fx-alignment: center; -fx-max-width:Infinity; -fx-padding: 5;"/>
        <TextField fx:id="assetNumberTextField_delete" GridPane.columnIndex="1" GridPane.rowIndex="0"
            style="-fx-pref-height: 50px; -fx-font-size: 22;"/>
        <HBox alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" spacing="25">
            <Button fx:id="executeAssetSearchButton_delete" text="Delete" onAction="#deleteAsset" GridPane.columnIndex="0" GridPane.rowIndex="1"
                style="-fx-pref-width: 150px; -fx-pref-height: 50px; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button fx:id="primaryButton" text="Main Menu" onAction="#switchToPrimary" GridPane.columnIndex="1" GridPane.rowIndex="1"
                style="-fx-pref-width: 150px; -fx-pref-height: 50px; -fx-font-size: 18; -fx-font-weight: bold;"/>
        </HBox>
        <Label fx:id="userNotificationLabel_delete" text="" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" 
            style="-fx-pref-width: 1000px; -fx-font-weight: bold; -fx-text-fill: #e87500; -fx-font-size: 22; -fx-wrap-text:true; -fx-text-alignment: center; -fx-alignment: center; -fx-max-width:Infinity; -fx-padding: 5;"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</GridPane>
